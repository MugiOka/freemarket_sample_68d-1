.header
  .header__block
    .header__block__inner
      .header__block__inner__icon
        = link_to "#" do
          = image_tag "logo.png", class:"furima-logo", width: "140px", height: "40px"
      .header__block__inner__form
        .header__block__inner__form__box
          = text_field_tag :content, "", class: "header__block__inner__form__box__input", placeholder:"キーワードから探す"
          .header__block__inner__form__box__btn
            = link_to '#' do
              = image_tag "icon-search 1.png", class: "header__block__inner__form__box__btn__pic"
    
    .header__block__menu
      .header__block__menu__left
        .header__block__menu__left__category
          %a.header__block__menu__left__category__tab カテゴリー
        .header__block__menu__left__brand
          %a.header__block__menu__left__brand__tab ブランド
      .header__block__menu__right
        .header__block__menu__right__login
          %a
          = link_to "#", class: "header__block__menu__right__login__tab" do
            ログイン
        .header__block__menu__right__signin
          %a
          = link_to "#", class: "header__block__menu__right__signin__tab" do
            新規登録
