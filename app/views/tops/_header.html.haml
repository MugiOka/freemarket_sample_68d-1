.top-header
  .top-header__block
    .top-header__block__inner
      .top-header__block__inner__icon
        = link_to root_path do
          = image_tag "logo.png", class:"furima-logo", width: "140px", height: "40px"
      .top-header__block__inner__form
        .top-header__block__inner__form__box
          = text_field_tag :content, "", class: "top-header__block__inner__form__box__input", placeholder:"キーワードから探す"
          .top-header__block__inner__form__box__btn
            = link_to '#' do
              = image_tag "icon-search 1.png", class: "top-header__block__inner__form__box__btn__pic"
  .top-header__bottom
    .top-header__left--content
      = render "tops/category"                       
      = render "tops/brand"
    .top-header__right--content
      - if user_signed_in?
        = render 'header-nav_signed-in'
      - else
        = link_to "新規会員登録",new_top_path, class: "right__btn signup__btn" 
        = link_to "ログイン",new_user_session_path, class: "right__btn login__btn" 
      
