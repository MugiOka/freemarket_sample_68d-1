= form_with url: cards_path, method: :post,class: "form" do |f|
  = f.label :カード番号
  %span
    必須
  = f.text_field :card_number, name: "card_number", id:"card_number", placeholder: '半角数字のみ', maxlength: "16"
  = f.label :有効期限 
  %span.form-require 必須
  = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]], {}, name: "exp_year", id:"exp_year"
  %span 年
  = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{}, name: "exp_month", id:"exp_month"
  %span 月
  = f.label :セキュリティーコード
  = f.text_field :cvc, name: "cvc", id:"cvc", placeholder: 'カード背面4桁もしくは3桁の番号', class: 'input-default', maxlength: "4"
  = f.submit '次へ進む', id: "charge-form"
  .payment-errors